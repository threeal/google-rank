{
  "root": true,
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": ["**/*.?([cm])ts"],
      "extends": ["plugin:@typescript-eslint/recommended"]
    },
    {
      "files": ["**/*.test.*"],
      "env": {
        "jest": true
      }
    },
    {
      "files": ["package.json"],
      "plugins": ["json-files"],
      "rules": {
        "json-files/sort-package-json": "error"
      }
    }
  ]
}

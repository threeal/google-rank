{
  "collectCoverage": true,
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  },
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.mjs$": "$1.mts"
  },
  "preset": "ts-jest/presets/default-esm",
  "transform": {
    "^.+\\.m?ts$": ["ts-jest", { "useESM": true }]
  },
  "verbose": true
}

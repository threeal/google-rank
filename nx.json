{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "format", "lint"]
      }
    }
  },
  "namedInputs": {
    "dependencies": ["{projectRoot}/.pnp.*", "{projectRoot}/package.json"]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["lint"],
      "inputs": [
        "dependencies",
        "{projectRoot}/src/**/*.mts",
        "{projectRoot}/tsconfig.json"
      ]
    },
    "format": {
      "inputs": ["dependencies", "{projectRoot}/**/*", "{projectRoot}/**/.*"]
    },
    "lint": {
      "dependsOn": ["format"],
      "inputs": [
        "dependencies",
        "{projectRoot}/src/**/*",
        "{projectRoot}/.eslintrc.json"
      ]
    },
    "test": {
      "dependsOn": ["lint"]
    }
  }
}
